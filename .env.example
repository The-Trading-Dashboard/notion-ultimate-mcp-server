# Notion API Configuration
NOTION_TOKEN=secret_your_notion_integration_token_here
DATABASE_ID=your_database_id_here

# Optional: Additional database IDs
RESEARCH_DATABASE_ID=
DECISIONS_DATABASE_ID=
RISKS_DATABASE_ID=

# MCP Server Configuration
MCP_PORT=3000
MCP_LOG_LEVEL=INFO

# Feature Flags
ENABLE_AUTO_UNBLOCK=true
ENABLE_AI_SUGGESTIONS=true
ENABLE_GITHUB_SYNC=false

# Performance Tuning
API_RATE_LIMIT=3
CACHE_TTL=300
MAX_RETRIES=3

# Development Settings
DEBUG=false
LOG_FILE=notion_mcp.log